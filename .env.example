# ==========================================================
# LLM-Driven OpenFOAM Orchestration System Configuration
# Copy to .env and update with your values
# ==========================================================

# ----------------------------------------------------------
# OpenFOAM Configuration
# ----------------------------------------------------------
OPENFOAM_PATH=/opt/openfoam
OPENFOAM_VERSION=v2312
WORKDIR=/tmp/foam_simulations

# Case and result directories
CASES_DIR=/data/cases
RESULTS_DIR=/data/results
TEMPLATES_DIR=/app/templates

# ----------------------------------------------------------
# API Configuration
# ----------------------------------------------------------
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=true
CORS_ORIGINS=*

# ----------------------------------------------------------
# LLM Configuration
# ----------------------------------------------------------
# Provider: openai, anthropic, ollama, local
LLM_PROVIDER=openai

# OpenAI settings
OPENAI_API_KEY=sk-your-key-here
OPENAI_MODEL=gpt-4

# Anthropic settings
ANTHROPIC_API_KEY=sk-ant-your-key-here
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# Ollama settings (local LLM)
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama2

# LLM parameters
LLM_TEMPERATURE=0.3
LLM_MAX_TOKENS=3000

# ----------------------------------------------------------
# Redis Configuration (for background jobs)
# ----------------------------------------------------------
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_URL=redis://redis:6379/0

# ----------------------------------------------------------
# Celery Configuration (background task processing)
# ----------------------------------------------------------
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0
CELERY_TASK_TRACK_STARTED=true

# ----------------------------------------------------------
# Resource Limits (Security)
# ----------------------------------------------------------
MAX_CELLS=10000000
MAX_CPUS=8
MAX_MEMORY_GB=16
MAX_RUNTIME=14400
MAX_DISK_GB=100
MAX_CELL_ASPECT_RATIO=1000

# ----------------------------------------------------------
# Simulation Settings
# ----------------------------------------------------------
MAX_SIMULATION_TIME=3600
MAX_PARALLEL_SIMULATIONS=4
ENABLE_VISUALIZATION=true

# ----------------------------------------------------------
# Logging Configuration
# ----------------------------------------------------------
LOG_LEVEL=INFO
LOG_FILE=logs/foam_orchestrator.log
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# ----------------------------------------------------------
# Security Settings
# ----------------------------------------------------------
ENABLE_SECURITY_VALIDATION=true
ENABLE_PHYSICS_VALIDATION=true
SANDBOX_ENABLED=true
